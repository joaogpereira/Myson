<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo do EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Borda opcional -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Cantos arredondados -->
    <corners android:radius="12dp" />

    <!-- Margem interna (padding visual interno) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>